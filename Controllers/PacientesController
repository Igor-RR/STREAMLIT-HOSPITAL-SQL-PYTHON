import sqlite3

def conectaBD():
    conexao = sqlite3.connect("Empresa.db")
    return conexao

def criar_tabela_pacientes():
    conexao = conectaBD()
    cursor = conexao.cursor()
    cursor.execute("""
        CREATE TABLE IF NOT EXISTS pacientes (
            cpf INTEGER(11) PRIMARY KEY,
            rg VARCHAR(255) NOT NULL,
            data_nascimento DATE NOT NULL,
            sintomas VARCHAR(255),
            historico_anterior VARCHAR(255),
            numero_registro_medico VARCHAR(255) FOREIGN KEY: 
            valor_total REAL GENERATED ALWAYS AS (qtd * valor_unitario) STORED
        )
    """)
    conexao.commit()
    conexao.close()

#   nome: str
#   rg: str
#   data_nascimento: str
#   sintomas: str
#   historico_anterior: str
#   cpf: int
#   cpf_medico:int
#   numero_do_coren: str
#   numero_registro_medico: str
